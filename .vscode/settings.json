{
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cmake.debugConfig": {
    "cwd": "${workspaceFolder}"
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.associations": {
    "*.fx": "glsl",
    "format": "cpp",
    "deque": "cpp",
    "forward_list": "cpp",
    "list": "cpp",
    "vector": "cpp",
    "xstring": "cpp",
    "string": "cpp",
    "xlocale": "cpp",
    "__locale": "cpp",
    "ostream": "cpp",
    "algorithm": "cpp",
    "*.in": "cpp",
    "array": "cpp",
    "bitset": "cpp",
    "initializer_list": "cpp",
    "stack": "cpp",
    "type_traits": "cpp",
    "xhash": "cpp",
    "xtree": "cpp",
    "xutility": "cpp",
    "__hash_table": "cpp",
    "__split_buffer": "cpp",
    "__tree": "cpp",
    "map": "cpp",
    "string_view": "cpp",
    "unordered_map": "cpp",
    "utility": "cpp"
  }
}
