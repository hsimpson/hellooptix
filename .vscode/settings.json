{
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cmake.debugConfig": {
    "cwd": "${workspaceFolder}"
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.associations": {
    "*.fx": "glsl",
    "format": "cpp",
    "deque": "cpp",
    "forward_list": "cpp",
    "list": "cpp",
    "vector": "cpp",
    "xstring": "cpp",
    "string": "cpp",
    "xlocale": "cpp",
    "__locale": "cpp",
    "ostream": "cpp"
  }
}
